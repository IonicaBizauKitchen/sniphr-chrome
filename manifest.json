{
  "name": "Sniphr",
  "version": "1.6",
  "description": "Sniphr saves the snippets of text you highlight as you browse around the web. It's the lazy (wo)man's bookmarking tool.",
	"homepage_url": "http://sniphr.com",
  "permissions": [
    "notifications",
    "http://local.dev/",
    "http://sniphr.heroku.com/",
    "http://sniphr.com/",
    "http://sniphr.dev/",
    "http://www.sniphr.dev/",
    "http://www.sniphr.com/"
  ],
	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
  "background_page" : "background.html",
  "browser_action": {
    "default_icon": "icon_public.png",
    "default_title": "Sniphr Options",
    "default_popup": "options.html"
  },
	"options_page": "options.html",
  "content_scripts": [ {
     "all_frames": true,
     "js": ["config.js", "common.js", "jquery-1.5.1.min.js", "sniph.js", "content.js"],
     "matches": [ "<all_urls>" ]
  } ]
}