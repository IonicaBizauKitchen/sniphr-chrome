{
  "name": "Sniphr",
  "version": "0.1",
  "description": "Sniphr tracks the text you select as you browse the web. Each time you select a piece of text, Sniphr saves it. Think of it as a casual form of bookmarking.",
  "permissions": [
    "http://local.dev/",
    "http://sniphr.heroku.com/",
    "http://sniphr.com/",
    "http://www.sniphr.com/"
  ],
	// "icons": {
	// 	"16": "icon16.png",
	// 	"48": "icon48.png",
	// 	"128": "icon128.png"
	// },
  "background_page" : "background.html",
  "browser_action": {
    "default_icon": "icon_public.png",
    "default_title": "Sniphr Options",
    "default_popup": "options.html"
  },
	"options_page": "options.html",
  "content_scripts": [ {
     "all_frames": true,
     "js": ["config.js", "common.js", "jquery-1.5.1.min.js", "sniph.js", "content.js"],
     "matches": [ "<all_urls>" ]
  } ]
}